@model Rabaswende002.ViewModel.RadomeMovieViewmodel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ var popular = Model.Customers.Count > 0 ? "popular" : null;}
}
<h2 class="@popular"> @Model.movies.Name</h2>


    @if (Model.Customers.Count == 0)
    {
        <h2>No one rented that movie</h2>
    }
    else
    {
<ul>
    @foreach (var customer in Model.Customers)
    {
        <li >@customer.Name</li>
    }
</ul>
    }





